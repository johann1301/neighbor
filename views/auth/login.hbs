<div class='authForm'>
  <div id='form'>

    <form class='authForm' action='/signup' method='POST'>

      <div class='authContainer' id='container'>
        <div class='form-container sign-up-container'>
          {{!-- <form class='auth-form' action='/signup' method='POST'> --}}
            <h1>Create account</h1>
            <input class='authInput' type='text' name='username' placeholder='Name' />
            <input class='authInput' type='email' name='email' placeholder='Email' />
            <input class='authInput' type='password' name='password' placeholder='Password' />
            <button class='authButton' type='submit'>Sign Up</button>
          </form>
        </div>
        <div class='form-container sign-in-container'>
          <form class='authForm' action='/login' method='POST'>
            <h1 class='authH1'>Sign in</h1>
            <input class='authInput' type='email' name='email' placeholder='Email' />
            <input class='authInput' type='password' name='password' placeholder='Password' />
            <button class='authButton' type='submit'>Sign In</button>
          </form>
        </div>
        <div class='overlay-container'>
          <div class='overlay'>
            <div class='overlay-panel overlay-left'>
              <h1 class='authH1'>Welcome back!</h1>
              <p class='authP'>Sign in with your email address and password to
                look for help and jobs</p>
              <p class='authButton' class='ghost' id='signIn'>Sign In</p>
            </div>
            <div class='overlay-panel overlay-right'>
              <h1 class='authH1'>Hello, neighbor!</h1>
              <p class='authP'>Enter your personal details and join your local
                community</p>
              <p class='authP' class='ghost' id='signUp'>Sign Up</p>
              {{! <button class="ghost" id="signUp">Sign Up</button> }}
            </div>
          </div>
        </div>
      </div>

      {{! basic login box }}

      {{! <div class="login-container">
      <div class="login-card">
        <div class="login-inner-box">
            <h2 class="login-header text-center">Log in</h2>
            <form>
              <input type="email" class="input-box"
              placeholder="Email address" required>
              <input type="password" class="input-box"
              placeholder="Password" required>
              <div class="submit-div">
              <button type="submit" class="login-submit-btn input-box">Log in</button>
              </div>
            </form>
        </div>
      </div>
    </div> }}

      {{#if errorMessage}}
        <p class='error'>{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>
</div>