{{!-- views/auth/signup.hbs --}}

<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="Type username here" />
    </label>

    <label> Email
      <input type="email" name="email" placeholder="Type email address here" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="Type password here" />
    </label>

    <button type="submit">Create account</button>

    {{!-- error message will be added here --}}
  </form>
</div>

{{!-- error message will be added here --}}
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}

  